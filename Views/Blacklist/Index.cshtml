@{
    ViewData["Title"] = "Blacklist Page";
}

<div class="blacklist-title">
    <div class="blacklist-item-a">
        <h3 style="font-family: DinoStyle; text-align: left; margin-top: 5px;">Blacklist</h3>
    </div>
    <div class="blacklist-item-b">
        <form method="post" asp-controller="blacklist" asp-action="addblacklist">
            <input id="inputId" class="blacklist-input" type="text" name="username">
            <input id="inputBlacklist" type="submit" value="เพิ่ม">
        </form>
    </div>
</div>

@{
    var i = 0;
    @for(i=0;i<@ViewBag.dataCount;i++)
    {
        <div class="blacklist-item">
            <div class="blacklist-item-a">
                <h3 class="blacklist-font">@ViewBag.blackListData[0,i]</h3>
            </div>
            <div class="blacklist-item-b">
            <form method="post" asp-controller="blacklist" asp-action="removeblacklist">
                <input id="inputId" class="blacklist-input" type="text" value="@ViewBag.blackListData[1,i]" name="id" style="display: none;">
                <input id="deleteBlacklist" type="submit" value="ลด" style="margin: 15px;">
            </form>
            </div>
        </div>
    }
}
